<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_default"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomeScreen.HomeScreen">

    <TextView
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:text="@string/home"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.761"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="43dp"
        android:layout_marginTop="2dp"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toStartOf="@+id/home"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_home_icon" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/todayRecom"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.763"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home"
        tools:text="Today's Recommendation" />

    <ImageButton
        android:id="@+id/refresh"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/todo"
        android:scaleType="centerInside"
        android:tag="refresh"
        android:tint="@color/colorPrimaryDark"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/loading" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/bottomsLayout"
        app:layout_constraintTop_toBottomOf="@+id/bottomsLayout">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginBottom="12dp"
            android:text="@string/comfort"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textStyle="italic"
            app:layout_constraintBottom_toTopOf="@+id/slider_comfort"
            app:layout_constraintEnd_toEndOf="@+id/slider_comfort"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="@+id/slider_comfort"
            tools:text="Comfort" />

        <SeekBar
            android:id="@+id/slider_comfort"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="140dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:max="10"
            android:tag="comfort"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/slider_formality" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginBottom="8dp"
            android:text="@string/warmth"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textStyle="italic"
            app:layout_constraintBottom_toTopOf="@+id/slider_warmth"
            app:layout_constraintEnd_toEndOf="@+id/slider_warmth"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintStart_toStartOf="@+id/slider_warmth" />

        <SeekBar
            android:id="@+id/slider_warmth"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="140dp"
            android:layout_height="16dp"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="20dp"
            android:max="10"
            android:tag="warmth"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginBottom="4dp"
            android:text="@string/formality"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textStyle="italic"
            app:layout_constraintBottom_toTopOf="@+id/slider_formality"
            app:layout_constraintEnd_toEndOf="@+id/slider_formality"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="@+id/slider_formality" />

        <SeekBar
            android:id="@+id/slider_formality"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="140dp"
            android:layout_height="21dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="16dp"
            android:max="10"
            android:tag="formality"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/slider_warmth" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="332dp"
        android:layout_height="110dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:gravity="center|fill_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/prev_torso"
            style="@android:style/Widget.Material.Light.ImageButton"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/next_2"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="@string/todo"
            android:scaleType="centerInside"
            android:tag="Torso"
            android:tint="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/innerTorso"
            app:layout_constraintEnd_toStartOf="@+id/innerTorso"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/innerTorso"
            app:srcCompat="@drawable/next_2" />

        <ImageView
            android:id="@+id/innerTorso"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/todo"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/divider"
            app:srcCompat="@drawable/shirt" />

        <ImageView
            android:id="@+id/outerTorso"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="44dp"
            android:contentDescription="@string/todo"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/home"
            app:srcCompat="@drawable/sweater" />

        <ImageButton
            android:id="@+id/next_torso"
            style="@android:style/Widget.Material.Light.ImageButton"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/next"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="@string/todo"
            android:scaleType="centerInside"
            android:tag="Torso"
            android:tint="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/outerTorso"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/outerTorso"
            app:layout_constraintTop_toTopOf="@+id/outerTorso"
            app:srcCompat="@drawable/next" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomsLayout"
        android:layout_width="223dp"
        android:layout_height="110dp"
        android:layout_marginTop="8dp"
        android:gravity="center|fill_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <ImageButton
            android:id="@+id/prev_legs"
            style="@android:style/Widget.Material.Light.ImageButton"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/next_2"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="@string/todo"
            android:scaleType="centerInside"
            android:tag="Legs"
            android:tint="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/bottoms"
            app:layout_constraintEnd_toStartOf="@+id/bottoms"
            app:layout_constraintTop_toTopOf="@+id/bottoms"
            app:srcCompat="@drawable/next_2" />

        <ImageView
            android:id="@+id/bottoms"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="168dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/todo"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home"
            app:srcCompat="@drawable/pants" />

        <ImageButton
            android:id="@+id/next_legs"
            style="@android:style/Widget.Material.Light.ImageButton"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:background="@drawable/next"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="@string/todo"
            android:scaleType="centerInside"
            android:tag="Legs"
            android:tint="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/bottoms"
            app:layout_constraintStart_toEndOf="@+id/bottoms"
            app:layout_constraintTop_toTopOf="@+id/bottoms"
            app:srcCompat="@drawable/next" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="209dp"
        android:layout_height="110dp"
        android:layout_marginStart="12dp"
        android:gravity="center|fill_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/bottomsLayout"
        app:layout_constraintStart_toEndOf="@+id/bottomsLayout">

        <ImageButton
            android:id="@+id/prev_feet"
            style="@android:style/Widget.Material.Light.ImageButton"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:background="@drawable/next_2"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="@string/todo"
            android:scaleType="centerInside"
            android:tag="Feet"
            android:tint="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/shoes"
            app:layout_constraintEnd_toStartOf="@+id/shoes"
            app:layout_constraintTop_toTopOf="@+id/shoes"
            app:srcCompat="@drawable/next_2" />

        <ImageView
            android:id="@+id/shoes"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/todo"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="@+id/bottoms"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="@+id/bottoms"
            app:layout_constraintTop_toBottomOf="@+id/bottoms"
            app:srcCompat="@drawable/shoe" />

        <ImageButton
            android:id="@+id/next_feet"
            style="@android:style/Widget.Material.Light.ImageButton"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:background="@drawable/next"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="@string/todo"
            android:scaleType="centerInside"
            android:tag="Feet"
            android:tint="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/shoes"
            app:layout_constraintStart_toEndOf="@+id/shoes"
            app:layout_constraintTop_toTopOf="@+id/shoes"
            app:srcCompat="@drawable/next" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="83dp"
        android:layout_height="318dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center|center_vertical"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/noti_coat"
            android:layout_width="50dp"
            android:layout_height="49dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:contentDescription="@string/todo"
            app:layout_constraintEnd_toStartOf="@+id/noti_gloves"
            app:layout_constraintTop_toBottomOf="@+id/slider_formality"
            app:srcCompat="@drawable/women_long_coat" />

        <ImageView
            android:id="@+id/noti_umbrella"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:contentDescription="@string/todo"
            app:layout_constraintEnd_toStartOf="@+id/noti_sunglasses"
            app:layout_constraintStart_toEndOf="@+id/noti_leggings"
            app:layout_constraintTop_toBottomOf="@+id/slider_formality"
            app:srcCompat="@drawable/umbrella" />

        <ImageView
            android:id="@+id/noti_gloves"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:contentDescription="@string/todo"
            app:layout_constraintEnd_toStartOf="@+id/noti_leggings"
            app:layout_constraintTop_toBottomOf="@+id/slider_formality"
            app:srcCompat="@drawable/knitted_mittens" />

        <ImageView
            android:id="@+id/noti_leggings"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/todo"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/slider_formality"
            app:srcCompat="@drawable/socks" />

        <ImageView
            android:id="@+id/noti_sunglasses"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/todo"
            app:layout_constraintStart_toEndOf="@+id/noti_umbrella"
            app:layout_constraintTop_toBottomOf="@+id/slider_formality"
            app:srcCompat="@drawable/sunglasses" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>